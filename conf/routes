#####################
### Transactions ####
#####################
GET		/transactions					controllers.Application.list(p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")

# Add transactions
GET     /transactions/new              	controllers.Application.create()
POST    /transactions                  	controllers.Application.save()

# Edit transactions
GET     /transactions/:id              controllers.Application.edit(id:Long)
POST    /transactions/:id              controllers.Application.update(id:Long)

# Delete a transaction
POST    /computers/:id/delete       	controllers.Application.delete(id:Long)




# Map static resources from the /public folder to the /assets URL path
# Don't touch this is somehow required..
GET     /assets/*file               controllers.Assets.at(path="/public", file)
