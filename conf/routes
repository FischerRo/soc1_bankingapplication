# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


#####################
### API ####
#####################
GET         /accounts/:id/transactions        controllers.Application.listTransactionsForAccount(id:String)
GET         /accounts/:id/debit               controllers.Application.listDebitForAccount(id:String)
GET         /accounts/:id/credit              controllers.Application.listCreditForAccount(id:String)
GET         /transactions/add                 controllers.Transactions.add(fromId:Long, toId:Long, currency:String ?="EUR", category:String ?="Not specified", status:String ?="Processed", purpose:String ?="Not specified", value:String ?="0")
#should later be post

# Home page
GET         /                                 controllers.Application.index()
# Map static resources from the /public folder to the /assets URL path
# Don't touch this. Required to load css etc.
GET         /assets/*file                     controllers.Assets.at(path="/public", file)


#####################
### Accounts	 ####
#####################
GET         /accounts                         controllers.Accounts.list(p:Int ?= 0, s ?= "owner", o ?= "asc", f ?= "")

# Add accounts
GET         /accounts/new                     controllers.Accounts.create()
POST        /accounts                         controllers.Accounts.save()

# Edit accounts
GET         /accounts/:id                     controllers.Accounts.edit(id:Long)
POST        /accounts/:id                     controllers.Accounts.update(id:Long)

# Delete a transaction
POST        /accounts/:id/delete              controllers.Accounts.delete(id:Long)


#####################
### Customers    ####
#####################
GET         /customers                        controllers.Customers.list(p:Int ?=0, s ?= "lastName", o ?= "asc", f ?= "")

# Add accounts
GET         /customers/new                    controllers.Customers.create()
POST        /customers                        controllers.Customers.save()

# Edit accounts
GET         /customers/:id                    controllers.Customers.edit(id:Long)
POST        /customers/:id                    controllers.Customers.update(id:Long)

# Delete a transaction
POST        /customers/:id/delete             controllers.Customers.delete(id:Long)


#####################
### Transactions ####
#####################
GET         /transactions                     controllers.Application.list(p:Int ?= 0, s ?= "date", o ?= "desc", f ?= "")

# Add transactions
GET         /transactions/new                 controllers.Application.create()
POST        /transactions                     controllers.Application.save()

# Edit transactions
GET         /transactions/:id                 controllers.Application.edit(id:Long)
POST        /transactions/:id                 controllers.Application.update(id:Long)

# Delete a transaction
POST        /transactions/:id/delete          controllers.Application.delete(id:Long)


